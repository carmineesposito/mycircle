$current_store = Mage::app()->getStore();
?>
<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<div class="menu-default">
    <ul class="main-menu">
        <li class="has-submenu">
            <i><img src="<?php echo $this->getSkinUrl('images/flags/'.$current_store->getCode().'.gif') ?>" /></i>
            <a href="#" class="item"><?php echo $this->escapeHtml($current_store->getName()) ?></a>
            <ul class="submenu">
                <?php foreach ($this->getStores() as $_lang): ?>
                    <?php if ($_lang->getId() != $this->getCurrentStoreId()) : ?>
                        <li>
                            <a href="<?php echo $_lang->getCurrentUrl() ?>" class="item">
                                <img src="<?php echo $this->getSkinUrl('images/flags/'.$_lang->getCode().'.gif') ?>" />
                                <?php echo $this->escapeHtml($_lang->getName()) ?>
                            </a>
                        </li>
                    <?php endif; ?>
                <?php endforeach; ?>
            </ul>
        </li>
    </ul>
</div>