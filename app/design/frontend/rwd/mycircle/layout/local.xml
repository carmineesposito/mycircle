<layout version="0.1.0">
    <!--
    Default layout, loads most of the pages
    -->

    <default>
        <reference name="header">
            <block type="scandi_menumanager/menu" name="menu_header">
                <action method="setMenuId">
                    <menu_id>mainmenu</menu_id>
                </action>
            </block>
        </reference>
    </default>

    <cms_index_index>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <block type="core/template" name="before_content" as="before_content" translate="label" template="cms/home/slideshow.phtml">
                <label>Page Top</label>
                <block type="cms/block" name="home_center-image" before="-">
                    <action method="setBlockId"><block_id>home-slideshow-banners</block_id></action>
                </block>

            </block>
        </reference>

    </cms_index_index>

</layout>